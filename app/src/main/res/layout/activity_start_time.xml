<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartTime">

    <ImageView
        android:id="@+id/end_text"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:src="@drawable/start_time_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/text_Am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_text" />

    <TextView
        android:id="@+id/text_Pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Am" />

    <ImageButton
        android:id="@+id/btn_start_next"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/style_btn_start_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/text_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간은 마이페이지에서 수정할 수 있습니다."
        android:textColor="#cccccc"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_next"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/start_time_hour"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="180dp"
        android:inputType="numberDecimal"
        android:textSize="27sp"
        android:textAlignment="center"
        android:textColor="@color/green_1"
        app:layout_constraintStart_toEndOf="@+id/text_Am"
        app:layout_constraintTop_toBottomOf="@+id/end_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@color/green_1"
        android:textSize="60sp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toStartOf="@+id/start_time_minute"
        app:layout_constraintStart_toEndOf="@+id/start_time_hour"
        app:layout_constraintTop_toBottomOf="@+id/end_text" />

    <EditText
        android:id="@+id/start_time_minute"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="180dp"
        android:inputType="numberDecimal"
        android:textSize="27sp"
        android:textColor="@color/green_1"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/start_time_hour"
        app:layout_constraintTop_toBottomOf="@+id/end_text" />




</androidx.constraintlayout.widget.ConstraintLayout>